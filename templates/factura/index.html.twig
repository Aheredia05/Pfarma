{% extends 'base.html.twig' %}

{% block title %}Factura index{% endblock %}

{% block body %}
    <h1>Factura index</h1>

    <table class="table table-bordered ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Totalfactura</th>
                <th>Vendedor</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for factura in facturas %}
            <tr>
                <td>{{ factura.id }}</td>
                <td>{{ factura.Fecha ? factura.Fecha|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ factura.totalfactura }}</td>
                <td>{{ factura.usuario.username }}</td>
                <td>
                    <a href="{{ path('factura_show', {'id': factura.id}) }}">show</a>
                    <a href="{{ path('factura_edit', {'id': factura.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('factura_new') }}">Create new</a>
{% endblock %}
